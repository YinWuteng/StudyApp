<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_java_base"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_margin="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="Java基础学习"
            android:textSize="@dimen/sp_20"
             />
        <Button
            android:id="@+id/btn_deep_source"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_margin="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="Java深入源码"
            android:textSize="@dimen/sp_20"
            />
        <Button
            android:id="@+id/btn_data_structe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_margin="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="数据结构"
            android:textSize="@dimen/sp_20"
            />
        <Button
            android:id="@+id/btn_thread_pool"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_margin="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="多线程、线程池"
            android:textSize="@dimen/sp_20"
            />
        <Button
            android:id="@+id/btn_project_design"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_margin="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="设计模式"
            android:textSize="@dimen/sp_20"
            />
    </LinearLayout>
</ScrollView>
